<%= provide(:title, "Sign In")%>
<div class="jumbotron text-center">
	<h2>Sign In</h2>
	<p>Need an account? <%= link_to "Click Here", signup_path %></p>
	<div class="row formContainer signin">
		<div id="leftCol" class="col-lg-6 text-center">
			<div id="signinAlert" class="alert alert-danger text-center hidden">Wrong Email/Password Combo</div>
			<h3>Parent/Coach Login</h3>
			<%= form_for(:session, url: sessions_path, html: { id: "new_session" }, remote: true) do |f| %>
				<%= f.label :email, class: "formLabel" %>
				<%= f.text_field :email, class: "form-control", placeholder: "me@example.com" %>
				<%= f.label :password, class: "formLabel" %>
				<%= f.password_field :password, class: "form-control" %>
				<div class="text-center">
					<%= f.submit "Parent Sign In", class: "btn btn-lg btn-primary" %>
				</div>
			<% end %>
		</div>
		<div id="rightCol" class="col-lg-6 text-center">
			<div id="signinAlert" class="alert alert-danger text-center hidden">Wrong Email/Password Combo</div>
			<h3>Player Login</h3>
			<%= form_for(:session, url: 'children/signin') do |f| %>
				<%= f.label "Username", class: "formLabel" %>
				<%= f.text_field :username, class: "form-control", placeholder: "scoring-champ" %>
				<%= f.label :password, class: "formLabel" %>
				<%= f.password_field :password, class: "form-control" %>
				<div class="text-center">
					<%= f.submit "Player Sign In", class: "btn btn-lg btn-primary" %>
				</div>
			<% end %>
		</div>
	</div>
</div>

