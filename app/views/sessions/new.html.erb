<%= provide(:title, "Sign In")%>
<div class="jumbotron text-center">
	<h2>Sign In</h2>
	<p>Need an account? <%= link_to "Click Here", signup_path %></p>
	<div class="formContainer text-left">
		<div id="signinAlert" class="alert alert-danger text-center hidden">Wrong Email/Password Combo</div>

		<%= form_for(:session, url: sessions_path, html: { id: "new_session" }, remote: true) do |f| %>
			<%= f.label :email, class: "formLabel" %>
			<%= f.text_field :email, class: "form-control", placeholder: "me@example.com" %>
			<%= f.label :password, class: "formLabel" %>
			<%= f.password_field :password, class: "form-control" %>
			<div class="text-center">
				<%= f.submit "Sign In", class: "btn btn-lg btn-primary" %>
			</div>
		<% end %>
	</div>
</div>

