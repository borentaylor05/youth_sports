<div class="navbar navbar-inverse" role="navigation">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to yield(:city)+" Youth Sports", root_path, id: "logo" %>
      </div>
      <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to "Home", current_user %></li>
          <li><%= link_to "Register For A Sport", sports_path %></li>
          <li><%= link_to "Directory", parents_path %></li>
          <% if signed_in? %>
            <% if current_user.admin? %>
              <li class="dropdown">
              <a class="btn dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown">
                Admin
                <span class="caret"></span>
              </a>
              <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu2">
                <li><a role="menuitem" tabindex="-1" href="#">Manage Teams</a></li>
                <li><a role="menuitem" tabindex="-1" href="#">Manage Sports</a></li>

                <li class="divider"></li>
                <li><%= link_to "Sign out", signout_path, method: "delete" %></li>
              </ul>
            </li>
            <% end %>
            <li class="dropdown">
              <a class="btn dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown">
                Account
                <span class="caret"></span>
              </a>
              <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
                <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Settings</a></li>
                <li role="presentation" class="divider"></li>
                <li role="presentation"><%= link_to "Sign out", signout_path, method: "delete" %></li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Sign in", signin_path %></li>
          <% end %>
        </ul>
      </div><!--/.nav-collapse -->
    </div><!--/.container-fluid -->
</div>